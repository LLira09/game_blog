
<div class="container">
    <h1 class="text-center mt-4">Name: <%=@user.username %></h1>
    <p class="text-center">Email: <%=@user.email %></p>
    <% if logged_in? and @user == current_user %>
        <p><%= link_to 'Edit Profile', edit_user_path(@user) %></p>
    <% end %>
    <% @user.articles.each do |article| %>
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"><%= article.title%></h5>
        <p class="card-text"><%= article.content %></p>
        <a class="card-link"<%= link_to 'Show', article_path(article)%></a>
        <% if logged_in? && article.user == current_user %>
            <a class="card-link"<%= link_to 'Edit', edit_article_path(article)%></a>
            <%= link_to 'Delete', article_path(article), method: :delete %>
        <% end %>
    </div>
    </div>
    <% end %>
</div>