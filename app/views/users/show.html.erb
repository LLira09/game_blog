<div class="container">
    <h1 class="text-center mt-4"><%=@user.username %></h1>
    <p class="text-center"><%=@user.email %></p>
    <% if logged_in? and @user == current_user %>
        <p class="text-center"><%= link_to 'Edit Profile', edit_user_path(@user) %></p>
    <% end %>
    <div class="row">
    <% @user.articles.each do |article| %>
        <div class="col-sm-6">
        <div class="card mt-4">
            <div class="card-body">
            <h5 class="card-title"><%= article.title%></h5>
            <p class="card-text"><%= article.content %></p>
            <a class="btn btn-primary"<%= link_to 'Show', article_path(article)%></a>
            <% if logged_in? && article.user == current_user %>
                <a class="btn btn-primary"<%= link_to 'Edit', edit_article_path(article)%></a>
                <a class="btn btn-danger"<%= link_to 'Delete', article_path(article), method: :delete %></a>
            <% end %>
            </div>
            <div class="card-footer text-muted">
                <%= article.created_at.strftime("Posted on %m/%d/%Y") %>
            </div>
        </div>
        </div>
    <% end %>
    </div>
</div>
