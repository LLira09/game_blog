<h1><%=@article.title%></h1>




<hr>
<%=@article.user.username%>
<%@article.comments.each do |reply|%>
            <%=reply.comment%>
          <%end%>
<hr>


<h6><strong><%= @article.comments.count %></strong> Comments</h6>
        <%@article.comments.each do |reply|%>
            <li> <%=reply.comment%> </li>
        <%end%>
    <%= render 'comments/form' %>








<h3>Author: <%= @article.user.username%></h3>

<p><%=@article.content%></p>
<% if logged_in? && @article.user == current_user %>
    <%= link_to 'Edit', edit_article_path(@article) %>
    <%= link_to 'Delete', article_path(@article), method: :delete %>
<% end %>

