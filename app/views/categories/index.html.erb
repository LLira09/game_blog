<div class="container">
<h1 class="text-center mt-4">Checkout our categories</h1>
    <div class="card mt-4">
    <ul class="list-group list-group-flush">
    <% @categories.each do |category| %>
        <li class="list-group-item"><%= link_to category.name, category_path(category) %></li>
    <% end %>
    </ul>
    </div>
</div>


    
   


